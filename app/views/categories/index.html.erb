<div class="container">
<h4>Listing categories</h4>

<table class="table table-striped">
  <tr>
    <th>&nbsp;</th>
    <th>Name</th>
    <th>&nbsp;</th>
    <th></th>
    <th>Actions</th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td>&nbsp;</td>
    <td><%= link_to category.name, category %></td>
    <td>&nbsp;</td>
    <td><%= link_to 'Edit', edit_category_path(category), :class=>'btn' %></td>
    <td><%= link_to 'Destroy',  category, method: :delete, data: { confirm: 'Are you sure?' }, :class=>'btn btn-danger' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Category', new_category_path,:class=>'btn btn-primary',:role=>'button' %>
</div>